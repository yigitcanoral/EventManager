<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    app:contentPadding="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/venuephoto"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="146dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venuename" />

        <TextView
            android:id="@+id/venuename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/venuephoto"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/venuephoto"
            android:textSize="25dp"
            android:textColor="@color/colorwhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/venueaddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venuedetail"
            android:layout_alignStart="@+id/venuedetail"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorwhite"
            android:layout_toRightOf="@+id/venuephoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venuephoto" />

        <TextView
            android:id="@+id/venuedetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venuephoto"
            android:textColor="@color/colorwhite"
            android:layout_alignStart="@+id/venuephoto"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venueaddress" />

        <TextView
            android:id="@+id/venuephone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venuename"
            android:layout_alignStart="@+id/venuename"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorwhite"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venuedetail" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
